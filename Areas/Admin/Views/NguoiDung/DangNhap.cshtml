
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Quản Lý Kho</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <link href="~/Areas/Admin/Scripts/Layout/LayoutLogin/css/css-1.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">
</head>
<body>
    <div class="wrapper">
        <div class="logo">
            <img src="" alt="Logo">
        </div>
        <div class="text-center mt-4 name">
            Quản Lý Kho
        </div>
        <form class="p-3 mt-3" novalidate method="post">
            <div class="form-field d-flex align-items-center">
                <span class="far fa-user"></span>
                <input type="text" name="userName" id="userName" placeholder="Tên Đăng Nhập">
            </div>
            <div class="form-field d-flex align-items-center">
                <span class="fas fa-key"></span>
                <input type="password" name="password" id="pwd" placeholder="Mật Khẩu">
            </div>
            <input type="submit" class="btn mt-3" name="submit" id="submit" value="Đăng nhập">
        </form>
        <div class="text-center fs-6">
            <a href="@Url.Action("QuenMatKhau","NguoiDung",new { Area = "Admin" })">Quên Mật Khẩu ?</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</body>
</html>
